{
  "name": "@fd/ts-react-buttons",
  "version": "1.0.0",
  "description": "FD-themed buttons",
  "types": "dist/fd-buttons.d.ts",
  "main": "dist/fd-buttons.js",
  "files": [
    "dist/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build-dev": "webpack --mode=development",
    "build-prod": "cross-env NODE_ENV=production webpack --mode=production",
    "lint": "tslint -p .",
    "release": "npm update && npm i && npm run test && npm run lint && npm run build-prod",
    "test": "jest",
    "updateSnapshot": "jest --updateSnapshot"
  },
  "keywords": [
    "FD",
    "FDMG",
    "Buttons",
    "TypeScript",
    "React"
  ],
  "author": "Willem Liu",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/react": "^16.4.18",
    "@types/react-test-renderer": "^16.0.3",
    "astroturf": "^0.8.1",
    "awesome-typescript-loader": "^5.2.1",
    "chokidar": "^2.0.4",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "preact": "^8.3.1",
    "preact-compat": "^3.18.4",
    "react": "^16.6.1",
    "react-dom": "^16.6.1",
    "react-test-renderer": "^16.6.1",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "test/(.*)(test|spec)\\.(jsx?|tsx?)$",
    "setupFiles": [],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "collectCoverage": true,
    "coverageDirectory": "dist/coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ]
  }
}
